<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="User Registration"
                android:textSize="35dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/uNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:padding="15dp" />

            <EditText
                android:id="@+id/uAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:padding="15dp" />

            <EditText
                android:id="@+id/uNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="15dp" />

            <EditText
                android:id="@+id/uEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Email"
                android:padding="15dp" />

            <EditText
                android:id="@+id/uUsernameEdiText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Username"
                android:imeOptions="actionNext"
                android:padding="15dp" />

            <EditText
                android:id="@+id/uPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:padding="15dp" />

            <Button
                android:id="@+id/uregisterButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border"
                android:text="Register" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>